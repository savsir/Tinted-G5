<?xml version="1.0" encoding="utf-8"?>
<layer-list android:paddingMode="stack"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="false">
                <bitmap android:src="@drawable/ic_add" android:tint="?android:colorControlActivated" android:alpha="@dimen/icon_disabled_alpha" />
            </item>
            <item>
                <bitmap android:src="@drawable/ic_add" android:tint="?android:colorControlActivated" />
            </item>
        </selector>
    </item>
    <item>
        <ripple android:color="?android:colorControlHighlight" />
    </item>
</layer-list>